{
    "name": "@shenyu/backend",
    "version": "1.0.0",
    "private": false,
    "description": "Backend server for Shenyu - A powerful AI conversation platform",
    "type": "module",
    "main": "dist/api-server.js",
    "types": "dist/types/api-server.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/api-server.js",
            "types": "./dist/types/api-server.d.ts"
        }
    },
    "keywords": [
        "ai",
        "chat",
        "express",
        "typescript",
        "websocket",
        "streaming",
        "api-server",
        "multi-model"
    ],
    "homepage": "https://github.com/sales-nail/shenyu",
    "bugs": {
        "url": "https://github.com/sales-nail/shenyu/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sales-nail/shenyu.git"
    },
    "license": "MIT",
    "author": "Shenyu Team",
    "scripts": {
        "build": "tsc",
        "start": "node dist/api-server.js",
        "dev": "nodemon --watch src -e ts,json --exec node --loader ts-node/esm src/api-server.ts",
        "test": "jest",
        "clean": "rimraf dist",
        "prepare": "npm run clean && npm run build",
        "prepublishOnly": "npm run test && npm run build"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "node-fetch": "^3.3.2",
        "uuid": "^9.0.1",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "@types/node-fetch": "^2.6.4",
        "@types/uuid": "^9.0.8",
        "@types/ws": "^8.5.14",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
